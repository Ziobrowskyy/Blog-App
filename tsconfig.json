{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "outDir": "./server/out",
    "rootDir": "./server/src",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./server/src",
    "paths": {
      "auth": [ "./server/src/auth" ],
      "data": [ "./server/src/data" ],
      "mediators": [ "./server/src/mediators" ],
      "web": [ "./server/src/web" ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./server/src/**/*.tsx",
    "./server/src/**/*.ts"
  ]
}